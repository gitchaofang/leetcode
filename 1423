class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int n = cardPoints.size();
        if(k >= n) return std::accumulate(cardPoints.begin(), cardPoints.end(),0);
        int sum = std::accumulate(cardPoints.begin(),cardPoints.begin() + k,0);
        int res = sum;
        for(int i = k - 1; i >= 0; --i){
            sum = sum - cardPoints[i] + cardPoints[i + n - k];
            res =  std::max(res,sum);
        }
        return res;
    }
};
