class Solution {
public:
    int reverse(int x) {
        bool neg = false;
        if(x < 0) neg = true;
        x = std::abs(x);
        while(x != 0 && x % 10 == 0) x /= 10;
        int64_t d = 0;
        while(x){
            d = d*10 + (x % 10);
            x /= 10;
        }
        if(neg == true) d *= -1;
        if(d < -std::pow(2,31) || d > std::pow(2,31) - 1) return 0;
        return d;
    }
};
