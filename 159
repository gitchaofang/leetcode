class Solution {
public:
    int lengthOfLongestSubstringTwoDistinct(string s) {
        int res = 0;
        int left = 0;
        std::unordered_map<char,int>m;
        for(int i = 0; i < s.size(); ++i){
            ++m[s[i]];
            while(m.size() > 2){
                --m[s[left]];
                if(m[s[left]] == 0) m.erase(s[left]);
                ++left;
            }
            res = std::max(res,i - left + 1);
        }
        return res;
    }
};
