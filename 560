class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
        int n = nums.size();
        if(n == 0) return 0;
        std::vector<int>sum(n+1,0);
        for(int i=1; i<=n; ++i) sum[i] = sum[i-1] + nums[i-1];
        int res = 0;
        std::unordered_map<int,int>m({{0,1}});
        for(int i=1; i<=n; ++i){
            int targ = sum[i] - k;
            res += m[targ];
            ++m[sum[i]];
        }
        return res;
    }
};
